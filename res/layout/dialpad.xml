            android:text="@string/str_num8" />

    <Button
            android:id="@+id/btn_number9"
            android:layout_width="136px"
            android:layout_height="66px"
            android:layout_marginRight="0px"
            android:layout_marginTop="0px"
            android:background="@drawable/key_number_9_bg"
            android:text="@string/str_num9" />

    <Button
            android:id="@+id/btn_contacts"
            android:layout_width="109px"
            android:layout_height="133px"
            android:layout_marginTop="0px"
            android:layout_rowSpan="2"
            android:background="@drawable/key_contact_bg"
            android:gravity="bottom|center_horizontal"
