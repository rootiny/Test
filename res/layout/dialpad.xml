            android:text="@string/str_contacts"
            android:textColor="#000"
            android:textSize="20px" />

    <Button
            android:id="@+id/btn_star"
            android:layout_width="136px"
            android:layout_height="66px"
            android:layout_marginRight="0px"
            android:layout_marginTop="0px"
            android:background="@drawable/key_star_bg"
            android:text="@string/str_star" />

    <Button
            android:id="@+id/btn_number0"
            android:layout_width="136px"
            android:layout_height="66px"
            android:layout_marginRight="0px"
            android:layout_marginTop="0px"
            android:background="@drawable/key_number_0_bg"
            android:text="@string/str_num0" />

    <Button
            android:id="@+id/btn_pound"
            android:layout_width="136px"
            android:layout_height="66px"
            android:layout_marginRight="0px"
            android:layout_marginTop="0px"
            android:background="@drawable/key_pound_bg"
            android:text="@string/str_sharp" />

</com.base.module.phone.customview.DialPadGridLayout>