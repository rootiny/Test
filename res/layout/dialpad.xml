<?xml version="1.0" encoding="utf-8"?>
<com.base.module.phone.customview.DialPadGridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                    android:id="@+id/dialPadGridLayout"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:alignmentMode="alignBounds"
                                                    android:columnCount="4"
                                                    android:splitMotionEvents="false"
                                                    android:orientation="horizontal"
                                                    android:rowCount="4" >

    <Button
            android:id="@+id/btn_number1"
            android:layout_width="136px"
            android:layout_height="66px"
            android:layout_marginRight="0px"
            android:layout_marginTop="0px"
            android:background="@drawable/key_number_1_bg"
            android:text="@string/str_num1" />

    <Button
            android:id="@+id/btn_number2"
            android:layout_width="136px"
            android:layout_height="66px"
            android:layout_marginRight="0px"
            android:layout_marginTop="0px"
            android:background="@drawable/key_number_2_bg"
            android:text="@string/str_num2" />

    <Button
            android:id="@+id/btn_number3"
            android:layout_width="136px"
            android:layout_height="66px"
            android:layout_marginRight="0px"
            android:layout_marginTop="0px"
            android:background="@drawable/key_number_3_bg"
            android:text="@string/str_num3" />

    <Button
            android:id="@+id/btn_conf"
            android:layout_width="109px"
            android:layout_height="133px"
            android:layout_marginTop="0px"
            android:layout_rowSpan="2"
            android:background="@drawable/key_conf_bg"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="15px"
            android:text="@string/str_conf"
            android:textColor="#000"
            android:textSize="20px" />

    <Button
            android:id="@+id/btn_number4"
            android:layout_width="136px"
            android:layout_height="66px"
            android:layout_marginRight="0px"
            android:layout_marginTop="0px"
            android:background="@drawable/key_number_4_bg"
            android:text="@string/str_num4" />

