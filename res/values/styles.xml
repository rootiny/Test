<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="Dialog_Fullscreen">

        <!-- <item name="android:windowBackground">@drawable/transparent</item> -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>


    <style name="spinner_style">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">24px</item>
        <item name="android:paddingLeft">10px</item>
        <item name="android:paddingRight">30px</item>
        <item name="android:paddingTop">1px</item>
        <item name="android:paddingBottom">1px</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:background">@drawable/dropdown_bg</item>
    </style>

</resources>